{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project Memory",
  "description": "Schema for project_memory.json",
  "type": "object",
  "properties": {
    "hypotheses": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "text": { "type": "string" },
          "source": { "type": "string" }
        },
        "required": ["text", "source"]
      }
    },
    "candidate_features": {
      "type": "array",
      "items": {
  "type": "object",
  "properties": {
    "name": { "type": "string" },
          "type": { "enum": ["code", "llm", "composition"] },
    "spec": { "type": "string" },
    "depends_on": { "type": "array", "items": { "type": "string" } },
    "params": { "type": "object" },
    "batch_size": { "type": "integer" },
    "cacheable": { "type": "boolean" }
  },
  "required": ["name", "type", "spec"]
      }
    },
    "realized_functions": { "type": "object" },
    "bo_history": { "type": "object" },
    "best_params": { "type": "object" },
    "reflections": { "type": "array" }
  },
  "required": [
    "hypotheses",
    "candidate_features",
    "realized_functions",
    "bo_history",
    "best_params",
    "reflections"
  ]
} 